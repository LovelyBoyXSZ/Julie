<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <ImageView
            android:id="@+id/iv_qr_code_scan"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:padding="@dimen/size_10"
            android:src="@drawable/icon_two_code_1" />

        <TextView
            android:id="@+id/tv_qr_code_create"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_18sp"
            android:layout_marginRight="@dimen/size_15"
            android:text="生成"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_qr_code_add_img"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/size_30"
            android:layout_marginTop="@dimen/size_25"
            android:src="@drawable/icon_add_img"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30" />

        <RelativeLayout
            android:id="@+id/rl_open_input"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_15"
            android:layout_marginRight="@dimen/size_15"
            android:layout_width="match_parent"
            android:padding="@dimen/size_3"
            android:layout_height="@dimen/size_70"
            android:background="@drawable/shape_two_code_scan">

            <EditText
                android:hint="输入需要生成二维码的内容"
                android:textSize="@dimen/size_12sp"
                android:id="@+id/et_two_code_intent"
                android:layout_marginLeft="@dimen/size_10"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:background="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </FrameLayout>


<RelativeLayout
    android:layout_marginTop="@dimen/size_15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_15">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/iv_qr_code" />
</RelativeLayout>

</LinearLayout>