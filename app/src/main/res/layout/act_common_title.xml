<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/common_title_root_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_50"
    android:background="@color/common_color_gray_1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50">

        <RelativeLayout
            android:id="@+id/common_title_left_rl"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50">

            <ImageView
                android:id="@+id/iv_title_img_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_back" />

            <TextView
                android:id="@+id/tv_left_text"
                android:layout_centerInParent="true"
                android:textColor="@color/common_color_white"
                android:text="返回"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/common_title_right"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_title_right_text"
                android:text="设置"
                android:textColor="@color/common_color_white"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_set"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/common_color_white"
            android:textSize="@dimen/size_18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>